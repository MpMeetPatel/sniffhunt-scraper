{
  "name": "sniffhunt-scraper-workspace",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "check-types": "bun run --filter 'apps/*' check-types",
    "dev:web": "cd apps/web && bun dev",
    "dev:docs": "cd apps/astro-docs && bun dev",
    "dev:server": "cd apps/server && bun --watch src/index.ts",
    "cli:scraper": "cd apps/scraper && bun cli.js",
    "setup:mcp": "cd apps/mcp && bun run setup",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "postinstall": "bunx playwright-core install --with-deps --only-shell chromium"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "globals": "^15.0.0",
    "prettier": "^3.0.0"
  },
  "packageManager": "bun@1.2.15",
  "dependencies": {
    "@types/mdx": "^2.0.13"
  }
}
